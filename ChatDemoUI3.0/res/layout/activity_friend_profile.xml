<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <include android:id="@+id/inL" layout="@layout/em_title_layout" />
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_below="@id/inL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<ImageView
    android:id="@+id/iv_profile_avater"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/default_avatar"/>
    <TextView
        android:id="@+id/tv_profile_username"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_profile_avater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="曹娟"
        android:visibility="gone"
       />
    <TextView
        android:id="@+id/tv_profile_nickname"
        android:layout_below="@id/tv_profile_username"
        android:layout_toRightOf="@id/iv_profile_avater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蓝色"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/iv_profile_avater"
        android:text="设置备注和标签"
        />
    </RelativeLayout>

</RelativeLayout>